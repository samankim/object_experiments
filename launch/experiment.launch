<launch>
        <arg name = "duration" value = "10s"/>
        <!-- Begin robot arm script -->
        <node
                name = "robot_script"
                pkg = "moveit_tutorials"
                type = "move_group_python_interface_tutorial.py"
        />

        <!-- Record topics in rosbag -->
        <node
                name = "$(anon record_experiment)"
                pkg = "rosbag"
                type = "record"
                args = "--duration=$(arg duration) -a"
        />
</launch>

